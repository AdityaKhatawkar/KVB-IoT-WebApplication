{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,

    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": false,
    "noImplicitAny": false,
    // "suppressImplicitAnyIndexErrors": true,

    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowJs": true,
    "checkJs": false,

    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src",
    "src/types"
  ],
  "references": []
}
